<UserControl x:Class="Msi.TemplateCodeGenerator.UI.ProjectExplorer.ProjectExplorerShellView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Msi.TemplateCodeGenerator.UI.Settings"
             mc:Ignorable="d" 
             x:ClassModifier="internal"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Hello World! From: Project Explorer View Shell" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontSize="24"/>
            <TextBlock Text="{Binding StatusMessage}" />
        </StackPanel>
    </Grid>
</UserControl>
