{
  // Configuración de Serilog
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.log", // Ruta del archivo de log. El guion permite que se añada la fecha automáticamente.
          "rollingInterval": "Day", // Rotación diaria de archivos
          "retainedFileCountLimit": 7 // Mantener logs de los últimos 7 días
        }
      }
    ],
    // Enrichers añaden información contextual extra a cada log
    "Enrich": [ 
        "FromLogContext", // Permite añadir propiedades dinámicas usando LogContext.PushProperty
        "WithMachineName", // Añade la propiedad MachineName
        "WithThreadId" // Añade la propiedad ThreadId
    ]
  }
}
